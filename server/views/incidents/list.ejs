<%- include ('../partials/header.ejs') %>
<%- include ('../partials/main_nav.ejs') %>
<!-- Main Content -->
<main class="container">
    <div class="row">
    <div class="col-md-offset-3 col-md-10">
    <h1>Incident List</h1>
    <% if(typeof displayName=='string' && displayName) { %>
                <a href="/incident-list/add" class="btn btn-primary" role="button">
                <i class="fas fa-plus-circle"></i> Add a Incident </a>
        <br>
    <% } %>
    <br>
    <table class= "table table-borderless table-hover table-sm table-striped table-responsive-md table-dark">
    <thead class="thead-dark">
    <tr class="d-flex">
    <% if(typeof displayName=='string' && displayName) { %>
        <th class="text-center col-2">issue</th>
        <th class="text-center col-2">status</th>
        <th class="text-center col-4">Description</th>
        <th class="text-center col-3">date</th>
        <th class="text-center col-2">time</th>
        <th class="text-center col-1"></th>
        <th class="text-center col-1"></th>
    <% } else { %>
        <th class="text-center col-2">issue</th>
        <th class="text-center col-2">status</th>
        <th class="text-center col-4">Description</th>
        <th class="text-center col-3">date</th>
        <th class="text-center col-2">time</th>
    <% } %>
    </tr>
    </thead>
    <tbody>
    <% for(let count= 0; count < Incidentlist.length; count ++) {%>
        <tr class="d-flex">
        <% if(typeof displayName=='string' && displayName) { %>
            <td class="text-center col-2" style="word-wrap: break-word;"><%= Incidentlist[count].issue %></td>
            <td class="text-center col-2" style="word-wrap: break-word;"><%= Incidentlist[count].status %></td>
            <td class="text-center col-4" style="word-wrap: break-word;"><%= Incidentlist[count].description %></td>
            <td class="text-center col-3" style="word-wrap: break-word;"><%= Incidentlist[count].date %></td>
            <td class="text-center col-2" style="word-wrap: break-word;"><%= Incidentlist[count].time %></td>
            <td class="text-center col-1" style="word-wrap: break-word;">
                <a href="/incident-list/edit/<%= Incidentlist[count]._id %>"
                class="btn btn-primary">
                    <i class="fas fa-pencil"></i> </a>
                </td>
            <td class="text-center col-1">
                <a href="/incident-list/delete/<%= Incidentlist[count]._id %>"
                class="btn btn-danger">
                <i class="fas fa-xmark"></i> </a>
                </td>
        <% } else { %> 
            <td class="text-center col-2" style="word-wrap: break-word;"><%= Incidentlist[count].issue %></td>
            <td class="text-center col-2" style="word-wrap: break-word;"><%= Incidentlist[count].status %></td>
            <td class="text-center col-4" style="word-wrap: break-word;"><%= Incidentlist[count].description %></td>
            <td class="text-center col-3" style="word-wrap: break-word;"><%= Incidentlist[count].date %></td>
            <td class="text-center col-2" style="word-wrap: break-word;"><%= Incidentlist[count].time %></td>
        <% } %> 
        </tr>
    <% } %>
    </table>
    </div>
</div>
</main>
<%- include ('../partials/bottom_nav.ejs') %>
<%- include ('../partials/footer.ejs')%> 