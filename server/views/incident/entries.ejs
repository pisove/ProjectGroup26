<%- include ('../partials/header.ejs') %>
<%- include ('../partials/main_nav.ejs') %>
<!-- Main Content -->
<main class="container">
    <div class="row">
    <div class="col-md-offset-3 col-md-10">
    <h1>Incident Management</h1>
    <a href="/incident/add" class="btn btn-primary" role="button">
        <i class="fas fa-plus-circle"></i> Add an Incident </a>
        <br>
    <br>
    <table class = "table table-bordered table-hover">
    <thead class="thead-dark">
    <tr class="d-flex">
    <th class ="text-centre col-2">Issue</th>
    <th class ="text-centre col-2">Status</th>s
    <th class ="text-centre col-4">Description</th>
    <th class ="text-centre col-1">Date</th>
    <th class ="text-centre col-1">Time</th>
    <th class ="text-centre col-1"></th>
    <th class ="text-centre col-1"></th>
    </tr>
    </thead>
    <tbody>
    <% for(let count= 0; count<Incident.length; count ++) {%>
        <tr class="d-flex">
        <td class="text-centre col-2"><%= Incident[count].issue %></td>
        <td class="text-centre col-2"><%= Incident[count].status %></td>
        <td class="text-centre col-4"><%= Incident[count].description %></td>
        <td class="text-centre col-1"><%= Incident[count].date %></td>
        <td class="text-centre col-1"><%= Incident[count].time %></td>
        <td class="text-centre col-1">
            <a href="/incident/edit/<%= Incident[count]._id %>"
            class="btn btn-primary">
            <i class="fas fa-pencil"></i> </a>
            </td>
        <td class="text-centre col-1">
            <a href="/incident/delete/<%= Incident[count]._id %>"
            class="btn btn-danger">
            <i class="fas fa-xmark"></i> </a>
            </td>
       
        </tr>

    <%} %>
    <tbody>
    </table>
    </div>
</div>
</main>
<%- include ('../partials/bottom_nav.ejs') %>
<%- include ('../partials/footer.ejs')%> 
