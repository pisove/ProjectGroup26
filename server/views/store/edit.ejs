<%- include ('../partials/header.ejs') %>
<%- include ('../partials/main_nav.ejs') %>

<!-- Content for edit page-->
<div class="container">
    <div class="row">
    <div class="col-md-10">
    <h1>Edit the Incident</h1>
    <form class="form" method="post"><br>
    
    <div class="form-group">
        <label for="nameTextField">Issue</label>
        <input type="text" class="form-control"
        id="nameTextField"
        placeholder="Enter a title for the incident"
        name="name" 
        value="<%= item.name%>"
        required>
    </div><br>

    <div class="form-group">
        <label for="catagoryTextField">Status</label>
        <input type="text" class="form-control"
        id="catagoryTextField"
        placeholder="Enter the current status of the incident"
        name="catagory" 
        value="<%= item.catagory%>"
        required>
    </div><br>

    <div class="form-group">
        <label for="descriptionTextField">Description</label>
        <textarea type="text" class="form-control"
        id="descriptionTextField"
        placeholder="Enter a brief description of the incident"
        name="description" required><%= item.description%></textarea>
    </div><br>

    <div class="form-group">
        <label for="stockpileTextField">Date</label>
        <input type="string" class="form-control"
        id="stockpileTextField"
        placeholder="Enter the number of items in stock"
        name="stock" 
        value="<%= item.stock %>"
        required>
    </div><br>

    <div class="form-group">
        <label for="priceTextField">Time</label>
        <input type="string" class="form-control"
        id="priceTextField"
        placeholder="Enter the time of the incident"
        name="price" 
        value="<%= item.price%>"
        required>
    </div>

    <br>
    <button class="btn btn-primary" type="submit">
    <i class="fas fa-edit"></i> Update</button>

    <a href="/store-catalogue/edit/<%= item._id %>" class="btn btn-warning">
    <i class="fas fa-undo"></i> Reset</a>
    
    <a href="/store-catalogue" class="btn btn-danger">
    <i class="fas fa-xmark"></i> Cancel</a>
</form>
</div>
</div>
</div>


<%- include ('../partials/bottom_nav.ejs') %>
<%- include ('../partials/footer.ejs')%>
